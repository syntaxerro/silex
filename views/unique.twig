<head>
<script src="../../js/jq2.1.3.js"></script>
<link rel="stylesheet" href="../../css/bootstrap.min.css"/>
<script src="../../js/bootstrap.min.js"></script>
</head>
<div class="list-group">
{% for item in all %}
<a href="/silex/{{id}}/ip/{{item.ip}}" class="list-group-item" style="display: none; justify-content: space-between;">

<span style="font-size: 1.3em;">{{item.ip}}</span>
<span>{{item.licznik}}</span>

</a>
{% endfor %}
</div>

<script>

var max = $("a").length;
var i=0;
function petla() {
	if(i++ < max) setTimeout(function() {
		$("a:nth-child("+i+")").css('display', 'flex').hide().fadeIn(380);
		petla();
	}, 80);
}
petla();
</script>
